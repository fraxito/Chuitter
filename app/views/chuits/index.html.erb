<p id="notice"><%= notice %></p>

<h1>Listing Chuits</h1>
<% if @chuits.count > 0  %>
<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chuits.each do |chuit| %>
      <tr>
        <td><%= chuit.usuario.nombre %></td> 
        <td><%= chuit.text %></td>
        <td><%= chuit.usuario_id %></td>
        <td><%= link_to 'Show', chuit %></td>
        <td><%= link_to 'Edit', edit_chuit_path(chuit) %></td>
        <td><%= link_to 'Destroy', chuit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <em>NO HAY CHUITS </em>
<%  end %>
<br>

